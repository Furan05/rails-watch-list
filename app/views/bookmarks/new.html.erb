<div class="container py-5">
  <h1>Add a movie to <%= @list.name %></h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, collection: Movie.all, prompt: "Select a movie" %>
    <%= f.input :comment, placeholder: "Why is this movie awesome?" %>
    <div class="d-flex gap-2">
      <%= f.submit "Add movie", class: "btn btn-primary" %>
      <%= link_to "Back to List", list_path(@list), class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>
